<div class="sessions-views">

<h2>Log in</h2>
<div class="devise-added" style="margin: 4px 0 0 7px;">
	<%= simple_form_for(resource, :html => {:novalidate => true}, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.label :email %><br>
	    <%= f.input_field :email, maxlength: 23, required: false, autofocus: true %><br>
	    <%= f.label :password %><br>
	    <%= f.input_field :password, maxlength: 23, required: false %>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Log in" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
</div>
