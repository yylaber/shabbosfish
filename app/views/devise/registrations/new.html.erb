<h2>Sign up</h2>
<div class="devise-added" style="margin: 4px 0 0 7px;">
	<%= simple_form_for(resource, as: resource_name, :html => {:novalidate => true}, url: registration_path(resource_name)) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.label :email %><br>
	    <%= f.input_field :email, maxlength: 23, required: true, autofocus: true %><br>
	    <%= f.label :password %><br>
	    <%= f.input_field :password, maxlength: 23, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %><br>
	    <%= f.label :password_confirmation %><br>
	    <%= f.input_field :password_confirmation, maxlength: 23, required: true %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign up" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>

