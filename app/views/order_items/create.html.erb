<h1>OrderItems#create</h1>
<p>Find me in app/views/order_items/create.html.erb</p>
<%= form_for(@order_item) do |f| %>
<%# render 'error_form' %>

<%= f.hidden_field :stripe_card_token %>

<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</div>
<%# if @order_item.stripe_card_token.present? %>
 <!--  Credit card has been provided. -->
<%# else %>
  <div class="field">
    <%= label_tag :card_number, "Credit Card Number" %><br>
    <%= text_field_tag :card_number, nil, name: nil %>
  </div>
  <div class="field">
    <%= label_tag :card_code, "Security Code on Card (CVV)" %><br>
    <%= text_field_tag :card_code, nil, name: nil %>
  </div>
  <div class="field">
    <%= label_tag :card_month, "Card Expiration" %><br>
    <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
  </div>
<%# end %>
<div id="stripe_error">
  <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
</div>  

  <div class="field">
    <%#= f.label :product_id %><br>
    <%#= f.number_field :product_id %>
  </div>
  <div class="field">
    <%#= f.label :user_id %><br>
    <%#= f.number_field :user_id %>
  </div>
  <div class="field">
    <%#= f.label :admin_id %><br>
    <%#= f.number_field :admin_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
    <%= link_to 'submit', "#", :onclick => "$('#form_id').submit()" %>
  </div>

<% end %>